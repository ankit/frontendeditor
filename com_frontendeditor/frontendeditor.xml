<?xml version="1.0" encoding="utf-8"?>
<install type="component" version="1.5.0" method="upgrade">
 <name>Frontend Editor</name>
 <creationDate>April 2009</creationDate>
 <author>Ankit Ahuja</author>
 <authorEmail>ahuja.ankit@gmail.com</authorEmail>
 <authorUrl>http://ankitahuja.com</authorUrl>
 <copyright>Copyright (C) 2009 Open Source Matters. All rights reserved.</copyright>
 <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
 <version>0.3.7</version>
 <description>This component works with the Frontend Editor and the Article Editor plugins to add enhanced frontend editing functionality to Joomla! After you install this component, please go to Components->Enhanced Frontend Editor in the admin and apply the hack.</description>
 
 <!-- Site Main File Copy Section -->
  <files folder="site">
	  <filename>frontendeditor.php</filename>
	  <filename>index.html</filename>
	  
	  <folder>controllers</folder>
	  <folder>models</folder>
	  <folder>views</folder>
  </files>

 <administration>
  <!-- Administration Menu Section -->
	<menu>Enhanced Frontend Editor</menu>
  <!-- Administrative Main File Copy Section -->
	<files folder="admin">
		<filename>frontendeditor.php</filename>
		<filename>controller.php</filename>
		<filename>install.sql</filename>
		<filename>uninstall.sql</filename>
		<filename>index.html</filename>

		<folder>assets</folder>
		<folder>hacks</folder>
		<folder>help</folder>
		<folder>models</folder>
		<folder>tables</folder>
		<folder>views</folder>
	</files>
 </administration>

 <install>
	<sql>
		<file charset="utf8" driver="mysql">install.sql</file>
	</sql>
 </install>
 <uninstall>
	<sql>
		<file charset="utf8" driver="mysql">uninstall.sql</file>
	</sql>
 </uninstall>
	
</install>